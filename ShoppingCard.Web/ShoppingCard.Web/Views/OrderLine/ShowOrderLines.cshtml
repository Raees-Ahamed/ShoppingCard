@model IEnumerable<ShoppingCard.Data.Entity.OrderItem>
@{
    ViewData["Title"] = "ShowOrderLines";
}

<h1 align="center">Ordered Items</h1>

<div class="container-fluid">
    <div class="form-group">
        <table class="table table-dark">
            <tr class="thead-dark">
                <th>Order Line Id</th>
                <th>Product Id</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Order Id</th>
            </tr>

            @foreach(var Items in Model)
            {
        <tr>
            <td>@Items.Id</td>
            <td>@Items.ProductId</td>
            <td>@Items.Price</td>
            <td>@Items.Qty</td>
            <td>@Items.OrderId</td>
            <td><a class="btn btn-success" asp-controller="OrderLine" asp-action="EditOrderLine" asp-route-id="@Items.Id">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="OrderLine" asp-action="DeleteOrderLine" asp-route-id="@Items.Id">Delete</a></td>
            <td><a class="btn btn-primary" asp-controller="Order" asp-action="GetOrdersById" asp-route-id="@Items.OrderId" >Go to Order</a></td>
        </tr>
            }
        </table>
    </div>
</div>



